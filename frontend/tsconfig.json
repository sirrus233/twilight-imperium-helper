{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react",
        "allowJs": false,
        "outDir": "./dist",
        "moduleResolution": "bundler"
    },
    "include": ["src/**/*", "tests/**/*"]
}
